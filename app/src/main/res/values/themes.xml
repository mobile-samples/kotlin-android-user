<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlinandroiduser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Kotlinandroiduser.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kotlinandroiduser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kotlinandroiduser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
    <!--    rating bar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/controlNormalColor</item>
        <item name="colorControlActivated">@color/goldRatingBarColor</item>
    </style>
    <!-- text review input   -->
    <style name="TextReviewInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/borderReviewInputColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <!--    btn save-->
    <style name="btn_save" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/primary_200</item>
        <item name="shapeAppearanceOverlay">@style/buttonShapeAppearance</item>
    </style>
    <style name="buttonShapeAppearance">
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>
</resources>